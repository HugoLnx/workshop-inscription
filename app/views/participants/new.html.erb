<script src="https://maps.googleapis.com/maps/api/js?v=3.exp&sensor=false"></script>
<script>
	var map;
	var tecgraf = new google.maps.LatLng(-22.978433, -43.233864);
	function initialize() {		
		var mapOptions = {
			zoom: 8,
			center: tecgraf
		};
		map = new google.maps.Map(document.getElementById('map'),
		  mapOptions);

		var coordInfoWindow = new google.maps.InfoWindow();
	  	coordInfoWindow.setContent('TECGRAF - PUC-RIO<br /> PUC-RIO - Pontifícia Universidade Católicas');
	  	coordInfoWindow.setPosition(tecgraf);
	  	coordInfoWindow.open(map);
	}

	

	google.maps.event.addDomListener(window, 'load', initialize);

</script>
